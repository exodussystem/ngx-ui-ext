{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "./dist/src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true
  },
  "exclude": ["node_modules","dist", "lib"],
  "files": ["./src/index.ts"],
  "compileOnSave": false,
  "buildOnSave": false
}
